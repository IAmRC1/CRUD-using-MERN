{ 
  "parser": "babel-eslint",  
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    },
    "ecmaVersion": 11
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [2, 2],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "implicit-arrow-linebreak": 2,
    "comma-dangle": 2,
    "no-trailing-spaces": 2,
    "no-console": 2,
    "no-unused-vars": 2,
    "react/state-in-constructor": 0,
    "react/prop-types": 0,
    "no-underscore-dangle": 0,
    "camelcase": 0,
    "quotes": ["error", "single"],
    "prefer-destructuring": ["error", {"object": true, "array": false}]
  }
}